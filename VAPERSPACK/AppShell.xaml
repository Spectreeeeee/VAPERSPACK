<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="VAPERSPACK.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:VAPERSPACK"
    Shell.FlyoutBehavior="Flyout"
    Title="VAPERSPACK">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Browse"
        ContentTemplate="{DataTemplate local:Browser}"
        Route="Browser" />

    <ShellContent
        Title="Shop"
        ContentTemplate="{DataTemplate local:ShopPage}"
        Route="Shop" />

    <ShellContent
        Title="Add Product"
        ContentTemplate="{DataTemplate local:AddProduct}"
        Route="AddProduct" />

</Shell>
